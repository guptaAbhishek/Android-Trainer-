<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context="com.example.rakesh.yom.AddClass">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></FrameLayout>
    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Client Name"
        app:met_baseColor="@color/Black"
        app:met_primaryColor="@color/action_bar_color"
        app:met_textColorHint="@color/action_bar_color"
        app:met_floatingLabel="highlight"
        android:textSize="18sp"
        app:met_floatingLabelTextSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:met_floatingLabelText="Client Name"
        android:id="@+id/client_name"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></FrameLayout>
    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Address"
        app:met_baseColor="@color/Black"
        app:met_primaryColor="@color/action_bar_color"
        app:met_textColorHint="@color/action_bar_color"
        app:met_floatingLabel="highlight"
        android:textSize="18sp"
        app:met_floatingLabelTextSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:met_floatingLabelText="Address"
        app:met_iconLeft="@drawable/ic_location_on_black_24dp"
        android:id="@+id/final_address"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></FrameLayout>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone No."
        app:met_baseColor="@color/Black"
        app:met_primaryColor="@color/action_bar_color"
        app:met_textColorHint="@color/action_bar_color"
        app:met_floatingLabel="highlight"
        android:textSize="18sp"
        app:met_iconLeft="@drawable/ic_call_black_24dp"
        app:met_floatingLabelTextSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:met_floatingLabelText="Address"
        android:id="@+id/final_phone_no"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/replacable_parent_layout"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></FrameLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Pick Your Days"
                android:id="@+id/pick_your_days_label"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_weight="3"
                android:gravity="left|center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:clickable="true"
                android:gravity="center"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"
                android:id="@+id/initially_day_picker"
                android:onClick="onClick"
                android:background="@drawable/rectangleline"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"></FrameLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:layout_weight="0.3">
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:layout_weight="0.3">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_weight="0.9">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></FrameLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:id="@+id/enter_start_time_label"
            android:text="Enter Start Time"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/rectangleline"
            android:clickable="true"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:onClick="onClick"
            android:id="@+id/book_class_start_time"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:background="@color/action_bar_color"
                android:textColor="@color/Gold"
                android:onClick="onClick"
                android:textColorHint="@color/Gold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:hint="Enter Start Date"
                android:id="@+id/book_class_start_date"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:textColorHint="@color/Gold"
                android:background="@color/action_bar_color"
                android:textColor="@color/Gold"
                android:textSize="18sp"
                android:gravity="center"
                android:onClick="onClick"
                android:layout_marginRight="15dp"
                android:hint="Enter End Date"
                android:id="@+id/book_class_end_date"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ADD CLIENT"
            android:background="@color/Gold"
            android:textColor="@color/action_bar_color"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:id="@+id/book_class_confirm"/>
    </FrameLayout>
</LinearLayout>
